<!DOCTYPE html>
<html lang='en'>
<head>
	<% include _head %>
	<meta name='description' content='Never Pay Extra | The Price Comparison App | Price Check While you Shop'>
	<meta name='keywords' content='never pay extra, price comparison app, chrome extension price comparison'>
	<link rel='stylesheet' href='/css/index.css'>
</head>
<body>
	<% include _navigation %>
	<div id='wrapper' extension-enabled='false'>
		<div id='content' class='center'>
			<div id='inner_content' class='center'>
				<div id='sales_video' class='center'>
					<iframe src='https://www.youtube.com/embed/fBx_C25kZz4' frameborder='0' allow='autoplay; encrypted-media' allowfullscreen></iframe>
				</div>
				<div id='browser_plugin' class='center'>
					<span>
						<h1>Never Pay Extra</h1> is a free price comparison app that ensures you get the best price when shopping online.
					</span>
					<% include _apps %>
				</div>
			</div>
		</div>
	</div>
	<% include _footer %>
	<script>
		$('footer #apps-container').css('display', 'none');
		$(document).ready(() => {
			setTimeout(() => {
				if($('#wrapper').attr('extension-enabled') === 'false') {
			    if(navigator.userAgent.indexOf('Chrome') >= 0) {
						$('#browser_plugin #chrome-app').css('animation', 'app-pulse-chrome 1s linear infinite');
			    } else if(navigator.userAgent.indexOf('Firefox') >= 0) {
						$('#browser_plugin #fire-fox-app').css('animation', 'app-pulse-fire-fox 1s linear infinite');
			    }
				}
			}, 1000);
		});
	</script>
</body>
</html>
